<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#d9eafe"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresh Banana 1kg"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:textColor="#4a4a4a"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:weightSum="1">

            <!-- Price on the left -->
            <TextView
                android:id="@+id/productPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="#090909"
                android:layout_weight="0.5" />

            <!-- Space in the middle -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25" />

            <!-- Quantity Label on the right -->
            <TextView
                android:id="@+id/productQuantityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty:"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="#090909" />

            <!-- Quantity Value on the right -->
            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="#090909" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/checkoutButton"
                android:layout_height="40dp"
                android:layout_width="160dp"
                android:layout_gravity="center"
                android:text="Checkout"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:background="@drawable/buynow_button"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/removeButton"
                android:layout_height="50dp"
                android:layout_width="160dp"
                android:layout_gravity="center"
                android:text="Remove"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:backgroundTint="#FB4141"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>