<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <!-- Order ID -->
        <TextView
            android:id="@+id/textViewOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: 123456"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Date: 2025-05-25"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Product Name -->
        <TextView
            android:id="@+id/textViewProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product: Sample Product"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Quantity -->
        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 2"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Unit Price -->
        <TextView
            android:id="@+id/textViewUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit Price: ₱50.00"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Total Price -->
        <TextView
            android:id="@+id/textViewTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price: ₱100.00"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="8dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Completed"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
